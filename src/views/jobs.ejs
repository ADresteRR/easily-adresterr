<div class="container">
    <% jobs.map(job=> { %>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    <%= job.jobdesignation %>
                </h5>
                <p class="card-text">Company: <%= job.companyname %>
                </p>
                <p class="card-text">Location: <%= job.joblocation %>
                </p>
                <p class="card-text">Salary: <%= job.salary %>
                </p>
                <p class="card-text">Skills Required: <%= job.skillsrequired.join(', ') %></p>


                <p class="card-text">Posted On: <%= job.jobposted %>
                </p>
                <p class="card-text">Apply By: <%= job.applyby %>
                </p>
                <a href="/job/<%= job.id %>" class="btn btn-primary">View Details</a>
            </div>
        </div>
        <% }) %>
</div>