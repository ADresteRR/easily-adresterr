<div class="container">
  <h1>Job Details</h1>
  <div class="container-fluid">
    <% if(locals?.name) { %>
      <div class="container">
        <a href="/" class="btn btn-primary">EDIT</a>
        <a href="/" class="btn btn-danger">delete</a>
      </div>
      <% } %>
        <p><strong>Category:</strong>
          <%= job.jobcategory %>
        </p>
        <p><strong>Designation:</strong>
          <%= job.jobdesignation %>
        </p>
        <p><strong>Location:</strong>
          <%= job.joblocation %>
        </p>
        <p><strong>Company:</strong>
          <%= job.companyname %>
        </p>
        <p><strong>Salary:</strong>
          <%= job.salary %>
        </p>
        <p><strong>Apply By:</strong>
          <%= job.applyby %>
        </p>
        <p><strong>Openings:</strong>
          <%= job.numberofopening %>
        </p>
        <p><strong>Skills Required:</strong>
          <%= job.skillsrequired.join(', ') %></p>
    <p><strong>Posted Date:</strong> <%= job.postedDate %></p>
    <a href="/job/applicants/:id"><p><strong>Applicants:</strong><%= job.applicants.length %></p></a>

    <!-- <ul>
        <% job.applicants.forEach(applicant => { %>
          <li>
            <strong>Name:</strong> <%= applicant.name %><br>
            <strong>Email:</strong> <%= applicant.email %><br>
            <strong>Contact:</strong> <%= applicant.contact %><br>
            <strong>Resume Path:</strong> <%= applicant.resume %><br>
          </li>
        <% }); %>
      </ul> -->

    <!-- Add more job details as needed -->
  </div>
  <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Apply to this Job
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Easily</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form action="/apply/<%= job.id%>" method="post" enctype="multipart/form-data">
                <h5> apply in less than 1 minute</h5>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input required type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Enter Name">
                    
      </div>
                <div class="form-group">
                  <label for="email">Email address</label>
                  <input required name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                  
    </div>
    <div class="form-group">
        <label for="phonenumber">Contact</label>
        <input required name="contact" type="tel" class="form-control" id="phonenumber" placeholder="+91 _ _ _ _ _ _ _ _ _ _">
    </div>
    <div class="form-group">
        <label for="resume">Resume</label>
        <input name="resume" required type="file" class="form-control" id="resume" accept=".pdf">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary">Save changes</button>
</div>
</div>
</div>
</div>
</div>